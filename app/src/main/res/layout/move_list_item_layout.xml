<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <TextView
        android:id="@+id/move_name_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        tools:text="Earthquake"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/guideline8"
        android:layout_marginRight="8dp"
        app:layout_constraintHorizontal_bias="0.51" />

    <android.support.constraint.Guideline
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/guideline8"
        app:layout_constraintGuide_percent="0.3"
        android:orientation="vertical" />

    <ImageView
        android:id="@+id/move_category_image"
        android:layout_width="32dp"
        android:layout_height="14dp"
        android:layout_marginStart="0dp"
        android:layout_marginTop="8dp"
        app:layout_constraintLeft_toLeftOf="@+id/move_name_text"
        app:layout_constraintTop_toBottomOf="@+id/move_name_text" />

    <es.developer.achambi.pkmng.core.ui.screen.TypeView
        android:id="@+id/move_type_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="0dp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/move_name_text"
        app:layout_constraintRight_toRightOf="@+id/move_name_text"
        app:layout_constraintLeft_toRightOf="@+id/move_category_image"
        android:layout_marginStart="4dp"
        app:layout_constraintHorizontal_bias="0.0"/>

    <TextView
        android:id="@+id/move_power_value_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        tools:text="Pow. 90"
        app:layout_constraintLeft_toLeftOf="@+id/guideline8"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp" />

    <TextView
        android:id="@+id/move_accuracy_value_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="Accuracy 100"
        android:layout_marginStart="0dp"
        app:layout_constraintLeft_toLeftOf="@+id/move_pp_value_text"
        android:layout_marginTop="4dp"
        app:layout_constraintTop_toBottomOf="@+id/move_pp_value_text"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="8dp" />

    <TextView
        android:id="@+id/move_pp_value_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="0dp"
        android:layout_marginTop="4dp"
        tools:text="PP 10"
        app:layout_constraintLeft_toLeftOf="@+id/move_power_value_text"
        app:layout_constraintTop_toBottomOf="@+id/move_power_value_text" />

    <TextView
        android:id="@+id/move_effect_text"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="7dp"
        tools:text="Inflicts regular damage with no additional effect."
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp"
        app:layout_constraintLeft_toRightOf="@+id/move_accuracy_value_text"
        android:layout_marginStart="8dp" />
</android.support.constraint.ConstraintLayout>