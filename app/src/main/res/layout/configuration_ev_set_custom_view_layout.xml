<?xml version="1.0" encoding="utf-8"?>
<merge
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/configuration_evs_title"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:id="@+id/configuration_evs_title" />

    <es.developer.achambi.pkmng.modules.create.screen.StatEVView
        android:id="@+id/configuration_hp_ev_stat_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:stat_type="hp"
        android:layout_marginTop="0dp"
        app:layout_constraintTop_toBottomOf="@+id/configuration_evs_title"
        android:layout_marginLeft="0dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="0dp"
        app:layout_constraintRight_toRightOf="parent">
    </es.developer.achambi.pkmng.modules.create.screen.StatEVView>

    <es.developer.achambi.pkmng.modules.create.screen.StatEVView
        android:id="@+id/configuration_attack_ev_stat_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:stat_type="attack"
        android:layout_marginTop="0dp"
        app:layout_constraintTop_toBottomOf="@+id/configuration_hp_ev_stat_bar"
        android:layout_marginLeft="0dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="0dp"
        app:layout_constraintRight_toRightOf="parent">
    </es.developer.achambi.pkmng.modules.create.screen.StatEVView>

    <es.developer.achambi.pkmng.modules.create.screen.StatEVView
        android:id="@+id/configuration_defense_ev_stat_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:stat_type="defense"
        android:layout_marginTop="0dp"
        app:layout_constraintTop_toBottomOf="@+id/configuration_attack_ev_stat_bar"
        android:layout_marginLeft="0dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="0dp"
        app:layout_constraintRight_toRightOf="parent">
    </es.developer.achambi.pkmng.modules.create.screen.StatEVView>

    <es.developer.achambi.pkmng.modules.create.screen.StatEVView
        android:id="@+id/configuration_sp_attack_ev_stat_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:stat_type="spAttack"
        android:layout_marginTop="0dp"
        app:layout_constraintTop_toBottomOf="@+id/configuration_defense_ev_stat_bar"
        android:layout_marginLeft="0dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="0dp"
        app:layout_constraintRight_toRightOf="parent">
    </es.developer.achambi.pkmng.modules.create.screen.StatEVView>

    <es.developer.achambi.pkmng.modules.create.screen.StatEVView
        android:id="@+id/configuration_sp_defense_ev_stat_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:stat_type="spDefense"
        android:layout_marginTop="0dp"
        app:layout_constraintTop_toBottomOf="@+id/configuration_sp_attack_ev_stat_bar"
        android:layout_marginLeft="0dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="0dp"
        app:layout_constraintRight_toRightOf="parent">
    </es.developer.achambi.pkmng.modules.create.screen.StatEVView>

    <es.developer.achambi.pkmng.modules.create.screen.StatEVView
        android:id="@+id/configuration_speed_ev_stat_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:stat_type="speed"
        android:layout_marginTop="0dp"
        app:layout_constraintTop_toBottomOf="@+id/configuration_sp_defense_ev_stat_bar"
        android:layout_marginLeft="0dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="0dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="8dp">
    </es.developer.achambi.pkmng.modules.create.screen.StatEVView>

</merge>