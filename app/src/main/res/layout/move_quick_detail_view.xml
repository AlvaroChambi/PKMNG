<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="left"
    android:background="@drawable/text_primary_background"
    android:paddingBottom="8dp">

    <TextView
        android:id="@+id/move_quick_detail_category_text"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        style="@style/quick_detail_text_style"
        tools:text="Special"
        android:layout_marginLeft="0dp"
        android:paddingRight="8dp"
        app:layout_constraintLeft_toLeftOf="@+id/move_quick_detail_power_text"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="8dp" />

    <TextView
        android:id="@+id/move_quick_detail_accuracy_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="Accuracy. 100"
        style="@style/quick_detail_text_style"
        android:paddingRight="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginLeft="0dp"
        app:layout_constraintLeft_toLeftOf="@+id/move_quick_detail_power_text" />

    <TextView
        android:id="@+id/move_quick_detail_power_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="Power. 90"
        style="@style/quick_detail_text_style"
        android:paddingRight="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/move_quick_detail_accuracy_text"
        app:layout_constraintLeft_toRightOf="@+id/move_quick_detail_name_text"
        android:layout_marginLeft="8dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toTopOf="@+id/move_quick_detail_category_text" />

    <TextView
        android:id="@+id/move_quick_detail_name_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        style="@style/quick_detail_text_style"
        tools:text="Thunder"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/move_quick_detail_type_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        style="@style/quick_detail_text_style"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/move_quick_detail_name_text"
        tools:text="electric"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="8dp"
        app:layout_constraintVertical_bias="0.0"/>

</android.support.constraint.ConstraintLayout>