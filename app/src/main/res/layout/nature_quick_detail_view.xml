<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/text_primary_background">

    <TextView
        android:id="@+id/nature_quick_detail_increased_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        style="@style/quick_detail_text_style"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Ability description short"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/nature_quick_detail_decreased_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="TextView"
        style="@style/quick_detail_text_style"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toRightOf="@+id/nature_quick_detail_increased_text"
        app:layout_constraintTop_toTopOf="@+id/nature_quick_detail_increased_text"
        android:layout_marginTop="0dp"
        app:layout_constraintBottom_toBottomOf="@+id/nature_quick_detail_increased_text"
        android:layout_marginBottom="0dp"
        android:layout_marginRight="8dp"
        app:layout_constraintVertical_bias="0.0"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintRight_toRightOf="parent" />
</android.support.constraint.ConstraintLayout>