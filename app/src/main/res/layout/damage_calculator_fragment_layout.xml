<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/cardview_light_background"
        android:padding="8dp"
        android:elevation="4dp">

        <ImageView
            android:id="@+id/left_pokemon_image_view"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:background="@drawable/drawable_primary_background"
            app:srcCompat="@drawable/pokemon_placeholder"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginLeft="8dp"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="8dp"
            android:layout_marginRight="8dp"
            app:layout_constraintHorizontal_bias="0.312"
            android:layout_marginBottom="4dp"
            app:layout_constraintBottom_toTopOf="@+id/left_pokemon_configuration_name"
            app:layout_constraintVertical_bias="1.0"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@+id/attack_direction_image_view" />

        <ImageView
            android:id="@+id/right_pokemon_image_view"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            android:background="@drawable/drawable_primary_background"
            app:srcCompat="@drawable/pokemon_placeholder"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="4dp"
            app:layout_constraintBottom_toTopOf="@+id/right_pokemon_configuration_name"
            app:layout_constraintVertical_bias="1.0"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toRightOf="@+id/attack_direction_image_view" />

        <ImageView
            android:id="@+id/attack_direction_image_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/ic_forward_black_24dp"
            android:tint="@color/primary"
            android:layout_marginLeft="0dp"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginRight="0dp"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="0dp"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="0dp" />

        <TextView
            android:id="@+id/left_pokemon_configuration_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            style="@style/primary_text_style"
            tools:text="Suuuper configuration"
            android:gravity="center"
            android:layout_marginRight="8dp"
            android:layout_marginLeft="8dp"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="8dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@+id/attack_direction_image_view"
            app:layout_constraintHorizontal_bias="1.0" />

        <TextView
            android:id="@+id/right_pokemon_configuration_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            style="@style/primary_text_style"
            android:gravity="center"
            android:layout_marginBottom="8dp"
            android:layout_marginLeft="8dp"
            tools:text="not so super configuration"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginRight="8dp"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toRightOf="@+id/attack_direction_image_view"
            app:layout_constraintHorizontal_bias="0.0" />

    </android.support.constraint.ConstraintLayout>
</FrameLayout>