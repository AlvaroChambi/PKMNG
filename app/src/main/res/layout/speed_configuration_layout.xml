<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/speed_calculator_add_image"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/speed_calculator_pokemon_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Charizard" />

    <TextView
        android:id="@+id/speed_calculator_base_speed"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        app:layout_constraintStart_toStartOf="@+id/speed_calculator_pokemon_name"
        app:layout_constraintTop_toBottomOf="@+id/speed_calculator_pokemon_name"
        tools:text="Base speed: 122" />

    <TextView
        android:id="@+id/speed_calculator_total_speed"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/speed_calculator_pokemon_name"
        tools:text="Total speed: 150" />

    <es.developer.achambi.pkmng.modules.create.screen.StatEVView
        android:id="@+id/speed_calculator_speed_ev"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/speed_calculator_nature"
        app:stat_type="speed" />

    <android.support.constraint.Group
        android:id="@+id/speed_calculator_header"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        app:constraint_referenced_ids="speed_calculator_total_speed,speed_calculator_speed_ev,speed_calculator_pokemon_name,speed_calculator_base_speed,speed_calculator_nature"
        tools:visibility="visible" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        tools:visibility="visible"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/baseline_add_24" />

    <Button
        android:id="@+id/speed_calculator_nature"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_marginEnd="16dp"
        android:textColor="@color/text_secondary"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="@+id/speed_calculator_base_speed"
        app:layout_constraintTop_toBottomOf="@+id/speed_calculator_total_speed"
        tools:text="Mild" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:text="@string/configuration_nature_title"
        app:layout_constraintBottom_toBottomOf="@+id/speed_calculator_nature"
        app:layout_constraintEnd_toStartOf="@+id/speed_calculator_nature"
        app:layout_constraintTop_toTopOf="@+id/speed_calculator_nature" />

    <FrameLayout
        android:id="@+id/speed_calculator_content_frame"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/speed_calculator_speed_ev" />

</android.support.constraint.ConstraintLayout>